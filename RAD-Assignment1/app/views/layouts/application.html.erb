<!DOCTYPE html>
<html>
  <head>
    <title>Assignment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--NavBar-->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" id="navbar-toggle" class="btn navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="glyphicon glyphicon-menu-hamburger"></span>
          </button>
          <a class="navbar-brand" href="/">Just Another Online Store</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <!--Go to cart if current_user is true-->
            <li><a href="<% if user_signed_in? %>/bag<% else %>/user_prompt<% end %>" type="button">
              <span class="glyphicon glyphicon-briefcase"></span>
              </a>
            </li>
            <li><a href=""><span class="glyphicon glyphicon-search"></span></a></li>
          </ul>
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-menu-hamburger"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/collections?collection=0">New</a></li>
                <li><a href="/collections?collection=1">Men</a></li>
                <li><a href="/collections?collection=2">Women</a></li>
                <li><a href="/collections?collection=3">Children</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/help">Help & Support</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  </body>
</html>
