<header class="top-image">
  <div class="container">
    <div class="text-center padding-top-s">
      <h3><%=@random_header.name %>
        <button type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
      </h3>
      <div class="panel panel-primary header-img">
        <div class="panel-body">
          <img class="img-responsive" src="<%=@random_header.images[0].url %>">
        </div>
      </div>
      <h3><%=@random_header.price %></h3>
    </div>
  </div>
</header>

<!--Popular-->
<section class="col-md-12 padding-bottom-s">
  <div class="container shadow-lg">
    <div class="row">
      <h2 class="col-xs-9 section-header">Popular</h2>
      <a href="/collections/popular"><h2 class="col-xs-3">See All <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span></h2></a>
    </div>
    <div class="row padding-top-s">
      <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-primary shadow-lg">
          <div class="panel-body">
            <img class="img-responsive" src="<%= @popular_items[0].images[0].url %>" />
          </div>
          <div class="panel-footer">
            <p><%= @popular_items[0].name %></p>
            <p>
              <%= @popular_items[0].price %>
              <button type="button" class="btn btn-default pull-right">
               <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              </button>
            </p>
            </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-primary shadow-lg">
          <img class="img-responsive" src="<%= @popular_items[1].images[0].url %>" />
          <div class="panel-footer">
            <p><%= @popular_items[1].name %></p>
            <p>
              <%= @popular_items[1].price %>
              <button type="button" class="btn btn-default pull-right">
               <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              </button>
            </p>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-primary shadow-sm">
          <img class="img-responsive" src="<%= @popular_items[2].images[0].url %>" />
          <div class="panel-footer">
            <p><%= @popular_items[2].name %></p>
            <p>
              <%= @popular_items[2].price %>
              <button type="button" class="btn btn-default pull-right">
               <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              </button>
            </p>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>

