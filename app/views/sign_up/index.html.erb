<section>
  <div class="container form-top">
    <div class="row">
      <div class="col-md-12 text-center">

        <h1>Sign Up</h1>
        <form>
          <div class="form-group">
            <label for="usernameField">Username</label>
            <input type="text" id="usernameField" class="form-control" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="passwordField">Password</label>
            <input type="password" id="passwordField" class="form-control" placeholder="*******">
          </div>
          <div class="form-group">
            <label for="confirmPasswordField">Confirm Password</label>
            <input type="password" id="confirmPasswordField" class="form-control" placeholder="*******">
          </div>
          <div class="form-group">
            <label for="emailField">Email</label>
            <input type="email" id="emailField" class="form-control" placeholder="John.Smith@Example.com">
          </div>
          <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
        </form>

        <div>
          <a href="login"><p>Already a user?</p></a>
        </div>
      </div>
    </div>
  </div>
</section>